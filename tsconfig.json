{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@config": ["src/config"],
      "@images/*": ["src/assets/img/*"],
      "@icons/*": ["src/icons/*"],
      "@components/*": ["src//components/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  }
}
